<form action="">
  <div class="form-group">
    <label for="">Options</label>
    <div class="toggle">
      <input type="checkbox" name="lower" id="lower" {{checked lower}}>
      <label for="lower">a-z</label>
    </div>

    <div class="toggle">
      <input type="checkbox" name="upper" id="upper" {{checked upper}}>
      <label for="upper">A-Z</label>
    </div>

    <div class="toggle">
      <input type="checkbox" name="number" id="number" {{checked number}}>
      <label for="number">0-9</label>
    </div>

    <div class="toggle">
      <input type="checkbox" name="dash" id="dash" {{checked dash}}>
      <label for="dash">-/_</label>
    </div>

    <div class="toggle">
      <input type="checkbox" name="symbol" id="symbol" {{checked symbol}}>
      <label for="symbol">!@#$%</label>
    </div>
  </div>

  <div class="form-group">
    <label for="length">Length</label>
    <input type="number" name="length" id="length" class="form-control" value="{{length}}">
  </div>

  <div class="form-group">
    <label for="key">Key</label>
    <input type="text" name="key" id="key" class="form-control" value="{{key}}">
    <small class="help-block">
      Your key is unique to you. You'll need it to generate the same passwords.
    </small>
  </div>
</form>

<div class="placeholder-passphrase"></div>

<div class="danger-zone">
  {{#if dropbox_auth}}
    <a href="#" class="btn btn-link disconnect-dropbox">Disconnect Dropbox</a><br>
  {{else}}
    <a href="#" class="btn btn-link connect-dropbox">Connect Dropbox</a><br>
  {{/if}}
  <a href="#" class="btn btn-link reset-settings">Reset settings</a><br>
  <a href="#" class="btn btn-link btn-link-danger clear-data">Clear local data</a>
</div>
